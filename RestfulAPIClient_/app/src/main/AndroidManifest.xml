<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="restfulapiclient.tutecentral.com.restfulapiclient" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-permission android:name="android.permission.INTERNET" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="restfulapiclient.tutecentral.com.restfulapiclient.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" />
        </activity>
        <activity
            android:name="restfulapiclient.tutecentral.com.restfulapiclient.DeptActivity"
            android:label="@string/title_activity_dept"
            android:parentActivityName="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" />
        </activity>
        <activity
            android:name="restfulapiclient.tutecentral.com.restfulapiclient.UserDetailsActivity"
            android:label="@string/title_activity_user_details"
            android:parentActivityName="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" />
        </activity>
        <activity
            android:name="restfulapiclient.tutecentral.com.restfulapiclient.CreateUserActivity"
            android:label="@string/title_activity_create_user"
            android:parentActivityName="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="restfulapiclient.tutecentral.com.restfulapiclient.MainActivity" />
        </activity>
    </application>

</manifest>

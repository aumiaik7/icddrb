<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sample_end_2hourln"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="47. Pre-LM Urine Collection End Time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/q47et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48.  Total Urine Volume of Pre-LM"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/q48et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:ems="10"
            android:inputType="numberDecimal"
            android:maxLength="3" >
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="49. Total Number of Thimerasol Drops Added to Pre-LM Urine"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/q49et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50. Number of Loose Stools During Pre-LM Urine Collection"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/q50et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="51. Total Volume of All Aliquots From Pre-LM Urine Collection"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/q51et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2" />

        <Button
            android:id="@+id/btnSaveHour2"
            android:layout_height="wrap_content"
            android:text="Save"  android:layout_width="146dp"/>

    </LinearLayout>

</ScrollView>
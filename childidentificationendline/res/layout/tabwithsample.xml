                            android:text="@string/done" >
                        </Button>

                        <Button
                            android:id="@+id/btnExit"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:text="Exit" >
                        </Button>
                        -->
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>
    </LinearLayout>


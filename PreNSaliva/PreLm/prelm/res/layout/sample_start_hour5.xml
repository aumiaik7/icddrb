<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >

        <GridLayout
            android:id="@+id/sample_start_hour5gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:columnCount="5" >

            <Space
                android:layout_column="0"
                android:layout_row="0" />

            <TextView
                android:id="@+id/textView1"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="0"
                android:background="#778899"
                android:text="14. Urine Episode"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="100dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="0"
                android:background="#708090"
                android:text="16. Volume of Each Urination(ml)"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="140dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_row="0"
                android:background="#6495ED"
                android:text="17. Estimated Volume Lost"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="140dp" />

            <TextView
                android:id="@+id/textViewcol5"
                android:layout_column="4"
                android:layout_gravity="center"
                android:layout_row="0"
                android:background="#6495ED"
                android:text="18.Stool in Bag?"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="100dp" />

            <Space
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_column="0"
                android:layout_row="0" />

            <Space
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_row="0" />

            <Space
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:layout_column="2"
                android:layout_row="0" />

            <TextView
                android:id="@+id/textView2"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="0"
                android:background="#808000"
                android:text="15. Time of Collection"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="140dp" />

            <!-- first five start -->

            <Spinner
                android:id="@+id/q14_hour5_spinner"
                android:layout_width="142dp"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_row="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:width="140dp" />

            <EditText
                android:id="@+id/q15_hour5et"
                android:layout_column="1"
                android:layout_gravity="center"
                android:layout_row="1"
                android:ems="10"
                android:inputType="time"
                android:width="120dp" >
            </EditText>

            <Space
                android:layout_column="2"
                android:layout_row="2" />

            <Space
                android:id="@+id/space1"
                android:layout_column="3"
                android:layout_row="2" />
            <!-- first five end -->

            <RadioGroup
                android:id="@+id/radioGroup17h5"
                android:layout_column="3"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_row="1" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. None" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. &lt; ½ " />

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. ½ " />

                <RadioButton
                    android:id="@+id/radio3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. > ½" />

                <RadioButton
                    android:id="@+id/radio4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. All" />
            </RadioGroup>

            <EditText
                android:id="@+id/q16_hour5et"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_row="1"
                android:ems="10"
                android:inputType="number"
                android:maxLength="3"
                android:width="60dp" />

            <RadioGroup
                android:id="@+id/radioGroup18h5"
                android:layout_column="4"
                android:layout_gravity="center"
                android:layout_row="1" >

                <RadioButton
                    android:id="@+id/radio0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

            <Space
                android:layout_width="1dp"
                android:layout_height="184dp"
                android:layout_column="0"
                android:layout_row="1" />

            <Button
                android:id="@+id/btnSaveEpisodeh5"
                android:layout_width="146dp"
                android:layout_gravity="right"
                android:layout_column="4"
                android:layout_row="3"
                android:text="Save Episode" />

            <Space
                android:layout_width="100dp"
                android:layout_height="47dp"
                android:layout_row="2" />
        </GridLayout>

    </LinearLayout>

</ScrollView>
        	android:label="@string/app_name"
            android:name="app.stoolsampleendline.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
        </activity>
        <activity
        	android:label="@string/app_name"
            android:name="app.stoolsampleendline.SampleCollector"
            android:configChanges="orientation"
